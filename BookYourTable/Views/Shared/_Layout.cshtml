@using BookYourTable.BLL.Models;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BookYourTable</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/scripts/jquery-1.10.2.min.js"></script>">
    <script src="~/Scripts/respond.js"></script>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BookYourTable", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    @if (Session["user"] != null)
                    {
                        UserBLL user = (UserBLL)Session["user"];
                        if (user.Discriminator.Equals("Guest"))
                        {
                            <li>@Html.ActionLink("Restaurants", "Index", "Restaurant")</li>
                            <li>@Html.ActionLink("Registered Guests", "Index", "Guest")</li>
                        }
                    }
                    
                </ul>
                @Html.Partial("_Navbar_Right")
            </div>
        </div>
    </div>

   
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BookYourTable</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
